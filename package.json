{
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean",
    "build": "tsc -b",
    "dist": "lerna run dist",
    "lint": "tslint packages/**/src/**/*.ts packages/**/__tests__/**/*.ts packages/**/__integration__/**/*.ts",
    "test": "jest",
    "test:unit": "jest /packages/.*/__tests__/.*",
    "test:integration": "jest /packages/.*/__integration__/.*",
    "prepublishOnly": "yarn clean && yarn build && yarn dist"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "cross-env": "^5.2.0",
    "jest-junit": "^5.1.0",
    "jest-watch-typeahead": "^0.2.0",
    "lerna": "^2.11.0",
    "prettier": "^1.14.0",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "<rootDir>/tsconfig-test.json"
      }
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/packages/.*/__(tests|integration)__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
