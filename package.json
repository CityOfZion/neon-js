{
  "scripts": {
    "clean": "lerna run clean",
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b",
    "dist": "lerna run dist",
    "lint": "tslint packages/**/src/**/*.ts packages/**/__tests__/**/*.ts packages/**/__integration__/**/*.ts",
    "precommit": "yarn lint && yarn pretty",
    "prepublishOnly": "yarn clean && yarn build && yarn dist",
    "prestart": "yarn build && yarn dist",
    "pretty": "prettier --write --loglevel=warn \"**/{src,__{tests,integration}__}/**/*.ts\"",
    "start": "jest --watch",
    "test": "jest",
    "test:integration": "jest /packages/.*/__integration__/.*",
    "test:unit": "jest /packages/.*/__tests__/.*"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "cross-env": "^5.2.0",
    "jest-junit": "^5.1.0",
    "jest-watch-typeahead": "^0.2.0",
    "lerna": "^3.1.1",
    "prettier": "^1.14.0",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
